}
@{ Html.Telerik().Window()
        .Name("LinksWindow")
        .Title("Add a New Link")
        .Draggable(true)
        .Modal(true)
        .Visible(false)
        .Buttons(b => b.Close())
        .Content(@<text>         
        <div class="editLine">
