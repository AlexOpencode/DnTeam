        </div>
        <div class="editLine editButtons">
            <input type="button" value="Add" class="t-button" onclick="addLink()" />
            <input type="button" value="Cancel" class="t-button" onclick="closeWindow('LinksWindow')" />
        </div>
    </text>)
        .Width(400)
