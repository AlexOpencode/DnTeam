<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>       
    @Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group.Add("telerik.common.css").Add("telerik.sitefinity.min.css"))
</head>
<body>
    <div class="page">
        <header>           
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            @{ Html.Telerik().Menu()
        .Name("Menu")
        .Items(menu =>
        {
            menu.Add().Text("Home").Action("Index", "Home");
            menu.Add().Text("Projects").Action("Index", "Project");
            menu.Add().Text("People").Action("List", "Account");
            menu.Add().Text("Clients").Action("Index", "Client");
            menu.Add().Text("Products").Action("Index", "Product");
            menu.Add().Text("Departments").Action("Index", "Department");
            menu.Add()
                .Text("Settings")
                .Items(item =>
                {
                    item.Add().Text("Locations").Action("Index", "Settings", new { type = "Locations" });
                    item.Add().Text("Project Roles").Action("Index", "Settings", new { type = "Project Roles" });
                    item.Add().Text("Project Statuses").Action("Index", "Settings", new { type = "Project Statuses" });
                    item.Add().Text("Project Types").Action("Index", "Settings", new { type = "Project Types" });
                    item.Add().Text("Technology Specialties").Action("Index", "Settings", new { type = "Technology Specialties" });
                });        
        })
        .Render();
}
